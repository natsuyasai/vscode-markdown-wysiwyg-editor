{
  "name": "webview-ui",
  "version": "0.0.2-alpha",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "build:debug:watch": "tsc && vite build --sourcemap \"inline\" --minify false --mode \"development\" --watch",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest --project unit",
    "test:story": "vitest --project storybook",
    "test:property": "vitest --project unit --run property.spec",
    "format": "prettier --write \"src/**/*.{ts,tsx,scss,css}\" \"tests/**/*.{ts,tsx}\" \"stories/**/*.{ts,tsx}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "check-types": "tsc --build",
    "lint": "eslint ./ && npm run markuplint",
    "markuplint": "markuplint \"./src/**/*.{jsx,tsx}\""
  },
  "dependencies": {
    "@milkdown/crepe": "^7.18.0",
    "@milkdown/kit": "^7.18.0",
    "@milkdown/react": "^7.18.0",
    "@milkdown/utils": "^7.18.0",
    "@vscode-elements/react-elements": "^2.4.0",
    "@vscode/codicons": "^0.0.44",
    "mermaid": "^11.12.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "remark-rehype": "^11.1.2",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^5.0.0",
    "@markuplint/jsx-parser": "^4.7.22",
    "@markuplint/react-spec": "^4.5.22",
    "@playwright/test": "^1.58.2",
    "@storybook/addon-docs": "^10.2.7",
    "@storybook/addon-mcp": "^0.2.2",
    "@storybook/addon-onboarding": "^10.2.7",
    "@storybook/addon-vitest": "^10.2.7",
    "@storybook/react-vite": "^10.2.7",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/vscode-webview": "^1.57.5",
    "@vitejs/plugin-react": "5.1.3",
    "@vitest/browser": "^4.0.15",
    "@vitest/browser-playwright": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-storybook": "^10.2.7",
    "fast-check": "^4.5.3",
    "jsdom": "^28.0.0",
    "markuplint": "^4.14.0",
    "playwright": "^1.58.2",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "sass": "^1.97.3",
    "storybook": "^10.2.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.15"
  }
}