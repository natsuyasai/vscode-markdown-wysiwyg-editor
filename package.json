{
  "name": "markdown-wysiwyg-editor",
  "displayName": "markdown-wysiwyg-editor",
  "description": "edit markdown",
  "version": "0.0.1-alpha1",
  "repository": {
    "url": "https://github.com/natsuyasai/vscode-markdown-wysiwyg-editor"
  },
  "publisher": "natsuyasai",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "markdown-wysiwyg-editor.openEditor",
        "displayName": "Markdown Editor",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ],
        "priority": "option"
      }
    ],
    "commands": [
      {
        "command": "markdown-wysiwyg-editor.openEditor",
        "title": "Open Markdown Editor"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "markdown-wysiwyg-editor.openEditor",
          "when": "resourceExtname == .md && editorLangId == markdown",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Markdown WYSIWYG Editor",
      "properties": {
        "markdownWysiwygEditor.javaPath": {
          "type": "string",
          "default": "",
          "description": "Path to Java executable. If not set, the extension will try to find Java in JAVA_HOME or PATH."
        },
        "markdownWysiwygEditor.plantumlServerPort": {
          "type": "number",
          "default": 8888,
          "description": "Port number for the local PlantUML server."
        },
        "markdownWysiwygEditor.theme": {
          "type": "string",
          "enum": [
            "auto",
            "light",
            "dark"
          ],
          "default": "auto",
          "description": "Editor theme. 'auto' follows VS Code's color theme."
        }
      }
    }
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && npm run build:webview && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src & cd webview-ui && npm run lint",
    "test": "vscode-test & cd webview-ui && npm run test",
    "format": "prettier --write \"src/**/*.ts\" & cd webview-ui && npm run format",
    "package-extension": "vsce package"
  },
  "devDependencies": {
    "@types/marked": "^5.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.11",
    "@types/pako": "^2.0.4",
    "@types/vscode": "^1.99.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "marked": "^4.3.0",
    "pako": "^2.1.0"
  }
}